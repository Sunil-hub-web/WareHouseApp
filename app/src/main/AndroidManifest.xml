<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kisaanandfactory.warehouseapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WareHouseApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.SplashScreen"
            android:theme="@style/Theme.WareHouseApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.ViewUserProfile"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.ChangePassword"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.ForgotPassword"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.OtpVerification"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.UserRegister"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.UserLogin"
            android:theme="@style/Theme.WareHouseApp.NoActionBar"></activity>
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.RegisterPage"
            android:theme="@style/Theme.WareHouseApp.NoActionBar"></activity>
        <activity
            android:name="com.kisaanandfactory.warehouseapp.activity.MainActivity"
            android:theme="@style/Theme.WareHouseApp.NoActionBar" />
    </application>

</manifest>