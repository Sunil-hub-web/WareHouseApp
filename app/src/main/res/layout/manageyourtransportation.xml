<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/button"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Your Transportation"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/edittextsize"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginBottom="@dimen/ten">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Vehical"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#0A22A1"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize"
                android:layout_marginRight="@dimen/twenty"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginBottom="@dimen/ten">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/serach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/fifteen">

            <EditText
                android:id="@+id/edit_UserName"
                android:layout_width="@dimen/two_hundred_fifty"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/edittextback"
                android:drawablePadding="@dimen/twenty"
                android:ems="10"
                android:hint="Search Vehical"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:textSize="@dimen/edittextsize"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/edit_Filter"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/edittextback"
                android:ems="10"
                android:text="Filter"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/edittextsize"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_1"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/twenty">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showorderRecycler">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>

    </LinearLayout>

<LinearLayout
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/ten"
    android:layout_marginLeft="@dimen/twenty_five"
    android:layout_marginRight="@dimen/twenty_five">

    <Button
        android:id="@+id/btn_AddVehical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:fontFamily="@font/poppins_semibold"
        android:text="Add Vehical"
        android:textColor="@color/white"
        android:textSize="@dimen/edittextsize"></Button>

    <Button
        android:id="@+id/btn_AddPickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bttonback"
        android:fontFamily="@font/poppins_semibold"
        android:text="Add Pickup"
        android:textColor="@color/white"
        android:textSize="@dimen/edittextsize"
        android:layout_marginTop="@dimen/fifteen"
        ></Button>


</LinearLayout>



</RelativeLayout>