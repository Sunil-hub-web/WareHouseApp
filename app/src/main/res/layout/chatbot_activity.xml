<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbot_back">

    <include
        android:id="@+id/include"
        layout="@layout/home_home"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/forty"
        android:layout_width="match_parent"></include>

    <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/forty"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_below="@id/include">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are here to help"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_five"
                android:layout_marginLeft="@dimen/fifteen"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_five"
                android:layout_marginTop="@dimen/ten"
                android:layout_below="@id/t1"
                android:layout_marginLeft="@dimen/fifteen"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select the mode of communication"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:layout_marginTop="@dimen/ten"
                android:layout_below="@id/t2"
                android:layout_marginLeft="@dimen/fifteen"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy"
            android:layout_below="@+id/r3"
            android:layout_margin="25dp"
            android:elevation="15dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"></ImageView>
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginLeft="@dimen/fifteen"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Related Order, Delivery &amp; Payment"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_below="@+id/t4"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chatAdhmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy"
            android:layout_below="@+id/r4"
            android:layout_margin="@dimen/twenty_five"
            android:elevation="@dimen/fifteen"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"></ImageView>
            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Admin"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_size"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="@dimen/fifteen"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with our admin"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_below="@+id/t6"></TextView>

        </RelativeLayout>

    </RelativeLayout>
