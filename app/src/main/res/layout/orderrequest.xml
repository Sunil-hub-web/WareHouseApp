<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_userDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittextback">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Order Id"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Payment Status"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="date/time"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Payment Statues"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/paymentStatues"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="@dimen/five"
                android:layout_marginBottom="@dimen/ten">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Sunil Dash"
                    android:textColor="#5F5E5E"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginLeft="@dimen/fifteen"></TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>